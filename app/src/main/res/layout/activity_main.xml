<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@drawable/blue_signal"
    tools:context=".MainActivity">

    <!-- メニューに移動するボタン -->
    <Button
        android:id="@+id/button2"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentEnd="true"
        android:layout_gravity="right"
        android:layout_margin="16dp"
        android:onClick="moveToMenu"
        android:text="ｍ"
        android:textSize="16sp"
        android:backgroundTint="#ff7f50"
        android:textColor="#ffffff"
        android:contentDescription="Menu" />



    <!-- 音量レベルを表示するテキストビュー -->
    <TextView
        android:id="@+id/rmsTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:text="音量レベル: 0"
        android:textSize="18sp"
        android:textColor="#ffffff"
        android:gravity="center_horizontal" />

    <!-- バイト合計を表示するテキストビュー -->
    <TextView
        android:id="@+id/resultTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:text="録音データのバイト合計: 0"
        android:textSize="18sp"
        android:textColor="#ffffff"
        android:gravity="center_horizontal" />


    <!-- 中央に配置するスタートボタン -->
    <Button
        android:id="@+id/startButton"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_gravity="center"
        android:backgroundTint="#00B7B8BD"
        android:text="START"
        android:textSize="24sp"
        android:textColor="#ffffff"
        android:elevation="8dp"
        android:layout_marginTop="32dp"
        android:layout_marginBottom="32dp"
        android:gravity="center"
        android:onClick="startAction" />
    <!-- 音声録音を開始/停止するスイッチ -->


    <!-- デバイスを振動させるボタン -->
    <Button
        android:id="@+id/button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:onClick="vibrate"
        android:text="デバイスを振動させる"
        android:textSize="16sp"
        android:backgroundTint="#1e90ff"
        android:textColor="#ffffff" />



    <!-- テキスト入力フィールド -->
    <EditText
        android:id="@+id/editTextText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="ここに入力してください"
        android:inputType="text"
        android:layout_marginBottom="16dp" />
</LinearLayout>
